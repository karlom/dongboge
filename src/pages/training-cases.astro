  <meta slot="head" property="og:url" content="https://www.dongboge.cn/training-cases" />
  <meta slot="head" property="og:image" content={cdnUrl("/images/training/og-image.jpg")} />
  <meta slot="head" property="og:locale" content="zh_CN" />
  
  <!-- Twitter Card Tags -->
