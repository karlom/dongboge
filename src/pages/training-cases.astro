              <div class="bg-blue-50 rounded-lg p-4">
                <h6 class="text-sm font-semibold text-blue-900 mb-2">培训反馈</h6>
                <p class="text-sm text-blue-800 italic">"{case_.feedback}"</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- 培训服务介绍 -->
