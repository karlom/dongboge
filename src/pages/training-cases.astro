  <meta slot="head" name="twitter:image" content={cdnUrl("/images/training/twitter-card.jpg")} />
  
  <!-- Structured Data -->
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <!-- Canonical URL -->
  <link slot="head" rel="canonical" href="https://yoursite.com/training-cases" />
  <!-- Header -->
  <div class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-200 shadow-sm">
