---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import CustomDropdown from "../components/CustomDropdown.astro";

// 行业选项
const industryOptions = [
  { value: "制造业", label: "制造业" },
  { value: "金融服务", label: "金融服务" },
  { value: "电商零售", label: "电商零售" },
  { value: "教育培训", label: "教育培训" },
  { value: "医疗健康", label: "医疗健康" },
  { value: "房地产", label: "房地产" },
  { value: "互联网科技", label: "互联网科技" },
  { value: "其他", label: "其他" },
];

// 预算选项
const budgetOptions = [
  { value: "5000-1万", label: "5000-1万" },
  { value: "1-3万", label: "1-3万" },
  { value: "3-5万", label: "3-5万" },
  { value: "5-10万", label: "5-10万" },
  { value: "10-20万", label: "10-20万" },
  { value: "20-30万", label: "20-30万" },
  { value: "30-50万", label: "30-50万" },
  { value: "50万以上", label: "50万以上" },
];
---

<Layout
  title="预约企业AI咨询 - 东波哥"
  description="预约企业AI技术咨询服务，获得专业的AI解决方案和技术指导"
>
  <!-- Header -->
  <div
    class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-200 shadow-sm"
  >
    <Header />
  </div>

  <!-- Breadcrumb Navigation -->
  <nav
    class="bg-white border-b border-gray-200 pt-20 pb-4"
    aria-label="面包屑导航"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-blue-600">首页</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/services" class="hover:text-blue-600">我的服务</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 font-medium">预约咨询</li>
      </ol>
    </div>
  </nav>

  <!-- Contact Section -->
  <section
    class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 pt-12 pb-12"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- 页面标题 -->
      <div class="text-center mb-8 sm:mb-12">
        <h1
          class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-3 sm:mb-4"
        >
          预约30分钟免费咨询
        </h1>
        <p
          class="text-sm sm:text-base lg:text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed px-4"
        >
          填写下方表单，我将在24小时内与您联系，为您提供专业的AI技术咨询和解决方案建议
        </p>

        <!-- 咨询价值说明 -->
        <div class="mt-6 bg-blue-50 rounded-lg p-4 sm:p-6 max-w-4xl mx-auto">
          <h2 class="text-lg font-semibold text-blue-900 mb-3">
            30分钟免费咨询您将获得：
          </h2>
          <div
            class="grid sm:grid-cols-2 lg:grid-cols-4 gap-3 text-sm text-blue-800"
          >
            <div class="flex items-center">
              <svg
                class="w-4 h-4 mr-2 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              AI应用场景分析
            </div>
            <div class="flex items-center">
              <svg
                class="w-4 h-4 mr-2 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              技术方案建议
            </div>
            <div class="flex items-center">
              <svg
                class="w-4 h-4 mr-2 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              实施路径规划
            </div>
            <div class="flex items-center">
              <svg
                class="w-4 h-4 mr-2 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              成本预算评估
            </div>
          </div>
        </div>
      </div>

      <!-- 响应式布局：手机单列，平板及以上双列 -->
      <div class="space-y-6 lg:grid lg:grid-cols-5 lg:gap-8 lg:space-y-0">
        <!-- 主要内容：咨询表单 (占3列) -->
        <div
          class="lg:col-span-3 bg-white rounded-xl sm:rounded-2xl shadow-lg sm:shadow-xl p-4 sm:p-6 lg:p-8"
        >
          <h2
            class="text-lg sm:text-xl lg:text-2xl font-bold text-gray-900 mb-4 sm:mb-6"
          >
            填写咨询需求
          </h2>

          <form
            id="contactForm"
            name="contact"
            method="POST"
            data-netlify="true"
            class="space-y-4 sm:space-y-6"
          >
            <!-- 企业信息 -->
            <div class="space-y-4 sm:grid sm:grid-cols-2 sm:gap-4 sm:space-y-0">
              <div>
                <label
                  for="companyName"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  企业名称 *
                </label>
                <input
                  type="text"
                  id="companyName"
                  name="companyName"
                  required
                  class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="请输入企业名称"
                />
              </div>
              <div>
                <CustomDropdown
                  id="industry"
                  name="industry"
                  label="所属行业"
                  options={industryOptions}
                  placeholder="请选择行业"
                />
              </div>
            </div>

            <!-- 联系人信息 -->
            <div class="space-y-4 sm:grid sm:grid-cols-2 sm:gap-4 sm:space-y-0">
              <div>
                <label
                  for="contactName"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  联系人姓名 *
                </label>
                <input
                  type="text"
                  id="contactName"
                  name="contactName"
                  required
                  class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="请输入您的姓名"
                />
              </div>
              <div>
                <label
                  for="position"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  职位
                </label>
                <input
                  type="text"
                  id="position"
                  name="position"
                  class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="请输入您的职位"
                />
              </div>
            </div>

            <!-- 联系方式 -->
            <div class="space-y-4 sm:grid sm:grid-cols-2 sm:gap-4 sm:space-y-0">
              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  联系电话 *
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="请输入联系电话"
                />
              </div>
              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700 mb-2"
                >
                  邮箱地址
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                  placeholder="请输入邮箱地址"
                />
              </div>
            </div>

            <!-- 咨询类型 -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-3">
                咨询类型 *
              </label>
              <!-- 隐藏字段用于提交多选框数据 -->
              <input
                type="hidden"
                name="consultationTypes"
                id="consultationTypesHidden"
                value=""
              />
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <label
                  class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-blue-50 transition-colors duration-200"
                >
                  <input
                    type="checkbox"
                    name="consultationType"
                    value="AI技术咨询"
                    class="mr-3 text-blue-600"
                  />
                  <span class="text-sm">AI技术咨询</span>
                </label>
                <label
                  class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-blue-50 transition-colors duration-200"
                >
                  <input
                    type="checkbox"
                    name="consultationType"
                    value="智能体定制"
                    class="mr-3 text-blue-600"
                  />
                  <span class="text-sm">智能体（Agent）定制</span>
                </label>
                <label
                  class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-blue-50 transition-colors duration-200"
                >
                  <input
                    type="checkbox"
                    name="consultationType"
                    value="Dify私有化部署"
                    class="mr-3 text-blue-600"
                  />
                  <span class="text-sm">Dify私有化部署</span>
                </label>
                <label
                  class="flex items-center p-3 border border-gray-300 rounded-lg cursor-pointer hover:bg-blue-50 transition-colors duration-200"
                >
                  <input
                    type="checkbox"
                    name="consultationType"
                    value="企业AI内训"
                    class="mr-3 text-blue-600"
                  />
                  <span class="text-sm">企业AI内训</span>
                </label>
              </div>
            </div>

            <!-- 需求描述 -->
            <div>
              <label
                for="requirements"
                class="block text-sm font-medium text-gray-700 mb-2"
              >
                具体需求描述 *
              </label>
              <textarea
                id="requirements"
                name="requirements"
                rows="4"
                required
                class="w-full px-3 py-2 sm:px-4 sm:py-3 text-sm sm:text-base border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 resize-none"
                placeholder="请详细描述您的AI咨询需求，包括期望解决的问题、预期目标等..."
              ></textarea>
            </div>

            <!-- 预算范围 -->
            <div>
              <CustomDropdown
                id="budget"
                name="budget"
                label="预算范围"
                options={budgetOptions}
                placeholder="请选择预算范围"
              />
            </div>

            <!-- 提交按钮 -->
            <button
              type="submit"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 sm:py-4 px-6 sm:px-8 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl text-sm sm:text-base"
            >
              <svg
                class="w-4 h-4 sm:w-5 sm:h-5 mr-2 inline"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              提交咨询申请
            </button>
          </form>
        </div>

        <!-- 侧边栏：联系信息和服务介绍 (占2列) -->
        <div class="lg:col-span-2 space-y-6">
          <!-- 联系方式 -->
          <div
            class="bg-white rounded-xl sm:rounded-2xl shadow-lg sm:shadow-xl p-4 sm:p-6"
          >
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-4 sm:mb-6">
              联系方式
            </h3>
            <div class="space-y-3 sm:space-y-4">
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-3 sm:mr-4 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span class="text-sm sm:text-base text-gray-700">邮箱咨询</span>
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-3 sm:mr-4 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  ></path>
                </svg>
                <span class="text-sm sm:text-base text-gray-700"
                  >微信咨询（扫描页眉二维码）</span
                >
              </div>
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-3 sm:mr-4 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm sm:text-base text-gray-700"
                  >响应时间：24小时内回复</span
                >
              </div>
            </div>
          </div>

          <!-- 服务优势 -->
          <div
            class="bg-white rounded-xl sm:rounded-2xl shadow-lg sm:shadow-xl p-4 sm:p-6"
          >
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-4 sm:mb-6">
              服务优势
            </h3>
            <div class="space-y-3 sm:space-y-4">
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-3 mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h4 class="text-sm sm:text-base font-semibold text-gray-900">
                    专业经验丰富
                  </h4>
                  <p class="text-xs sm:text-sm text-gray-600 mt-1">
                    多年AI技术实战经验，服务过众多企业
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-3 mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h4 class="text-sm sm:text-base font-semibold text-gray-900">
                    定制化解决方案
                  </h4>
                  <p class="text-xs sm:text-sm text-gray-600 mt-1">
                    根据企业实际需求提供个性化AI方案
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-3 mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h4 class="text-sm sm:text-base font-semibold text-gray-900">
                    全程技术支持
                  </h4>
                  <p class="text-xs sm:text-sm text-gray-600 mt-1">
                    从咨询到实施，提供全程技术指导
                  </p>
                </div>
              </div>
              <div class="flex items-start">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-green-600 mr-3 mt-0.5 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <div>
                  <h4 class="text-sm sm:text-base font-semibold text-gray-900">
                    注重实操培训
                  </h4>
                  <p class="text-xs sm:text-sm text-gray-600 mt-1">
                    提供实战导向的AI技能培训服务
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- 权威认证 -->
          <div
            class="bg-white rounded-xl sm:rounded-2xl shadow-lg sm:shadow-xl p-4 sm:p-6"
          >
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-4 sm:mb-6">
              权威认证
            </h3>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex items-start">
                <svg
                  class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600 mr-2 sm:mr-3 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs sm:text-sm text-gray-700 leading-relaxed"
                  >iTechClub华南区广州分会副秘书长</span
                >
              </div>
              <div class="flex items-start">
                <svg
                  class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600 mr-2 sm:mr-3 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <span class="text-xs sm:text-sm text-gray-700 leading-relaxed"
                  >广州市游戏行业协会游戏技术与创新委员会副主任</span
                >
              </div>
              <div class="flex items-start">
                <svg
                  class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600 mr-2 sm:mr-3 mt-0.5 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
