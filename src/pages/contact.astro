<script>
  // 表单提交处理
  document
    .getElementById("contactForm")
    ?.addEventListener("submit", function (e) {
      // 先进行验证，如果验证失败才阻止提交

      // 获取表单数据
      const formData = new FormData(e.target as HTMLFormElement);
      const data: Record<string, any> = Object.fromEntries(formData.entries());

      // 获取多选框数据
      const consultationTypes = Array.from(
        document.querySelectorAll('input[name="consultationType"]:checked')
      ).map((cb: any) => cb.value);
      data.consultationType = consultationTypes;

      // 简单的表单验证
      if (
        !data.companyName ||
        !data.contactName ||
        !data.phone ||
        !data.requirements
      ) {
        e.preventDefault();
        alert("请填写必填项目");
        return;
      }

      if (consultationTypes.length === 0) {
        e.preventDefault();
        alert("请至少选择一种咨询类型");
        return;
      }

      // 将多选框数据合并到隐藏字段
      const consultationTypesField = document.getElementById(
        "consultationTypesHidden"
      ) as HTMLInputElement;
      if (consultationTypesField) {
        consultationTypesField.value = consultationTypes.join(", ");
      }

      // 移除preventDefault，让表单正常提交到Netlify
      // 如果使用其他服务，需要相应修改action属性

      // 显示提交中状态
      const submitBtn = e.target.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML =
          '<svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 inline animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>提交中...';
      }

      // 不阻止表单提交，让它正常提交到配置的服务
      // e.preventDefault(); // 注释掉这行
    });
</script>
