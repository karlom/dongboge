<script>
  const contactForm = document.getElementById("contactForm");
  const statusBox = document.getElementById("formStatus");

  const statusClassMap = {
    success: ["border-green-200", "bg-green-50", "text-green-700"],
    error: ["border-red-200", "bg-red-50", "text-red-700"],
    info: ["border-blue-200", "bg-blue-50", "text-blue-700"],
  };

  function setStatus(type, message) {
    if (!statusBox) return;
    statusBox.classList.remove(
      "hidden",
      "border-green-200",
      "border-red-200",
      "bg-green-50",
      "bg-red-50",
      "text-green-700",
      "text-red-700",
      "bg-blue-50",
      "border-blue-200",
      "text-blue-700"
    );

    const classes = statusClassMap[type] || statusClassMap.info;
    statusBox.classList.add(...classes);
    statusBox.textContent = message;
  }

  function clearStatus() {
    if (!statusBox) return;
    statusBox.classList.add("hidden");
    statusBox.textContent = "";
  }

  function toggleFieldError(fieldName, hasError) {
    const errorEl = document.querySelector(`[data-error-for="${fieldName}"]`);
    const fieldEl = contactForm ? contactForm.querySelector(`[name="${fieldName}"]`) : null;

    if (hasError) {
      if (errorEl) errorEl.classList.remove("hidden");
      if (fieldEl instanceof HTMLElement) {
        fieldEl.classList.add("border-red-500", "focus:ring-red-400");
      }
    } else {
      if (errorEl) errorEl.classList.add("hidden");
      if (fieldEl instanceof HTMLElement) {
        fieldEl.classList.remove("border-red-500", "focus:ring-red-400");
      }
    }
  }

  function toggleGroupError(groupName, hasError) {
    const errorEl = document.querySelector(`[data-error-for="${groupName}"]`);
    const groupEl = document.querySelector(`[data-field-group="${groupName}"]`);

    if (hasError) {
      if (errorEl) errorEl.classList.remove("hidden");
      if (groupEl instanceof HTMLElement) {
        groupEl.classList.add("ring-2", "ring-red-300", "rounded-lg", "ring-offset-2", "ring-offset-white");
      }
    } else {
      if (errorEl) errorEl.classList.add("hidden");
      if (groupEl instanceof HTMLElement) {
        groupEl.classList.remove("ring-2", "ring-red-300", "rounded-lg", "ring-offset-2", "ring-offset-white");
      }
    }
  }

  async function handleSubmit(event) {
    event.preventDefault();
    if (!(contactForm instanceof HTMLFormElement)) return;

    clearStatus();

    const formData = new FormData(contactForm);
    const selectedTypes = Array.from(
      document.querySelectorAll('input[name="consultationType"]:checked')
    ).map((cb) => cb.value);

    const requiredFields = [
      { name: "companyName", value: (formData.get("companyName") || "").toString().trim() },
      { name: "contactName", value: (formData.get("contactName") || "").toString().trim() },
      { name: "phone", value: (formData.get("phone") || "").toString().trim() },
      { name: "requirements", value: (formData.get("requirements") || "").toString().trim() },
    ];

    let hasError = false;

    requiredFields.forEach(({ name, value }) => {
      const invalid = value.length === 0;
      toggleFieldError(name, invalid);
      if (invalid) {
        hasError = true;
      }
    });

    const checkboxError = selectedTypes.length === 0;
    toggleGroupError("consultationTypes", checkboxError);
    if (checkboxError) {
      hasError = true;
    }

    if (hasError) {
      setStatus("error", "请完善必填项后再提交，我们才能第一时间与您对接。");
      return;
    }

    const submitBtn = contactForm.querySelector('[data-submit-btn]');
    const btnContent = submitBtn ? submitBtn.querySelector(".submit-btn-content") : null;
    const btnLoading = submitBtn ? submitBtn.querySelector(".submit-btn-loading") : null;

    if (submitBtn instanceof HTMLButtonElement) {
      submitBtn.disabled = true;
    }
    if (btnContent instanceof HTMLElement) {
      btnContent.classList.add("hidden");
    }
    if (btnLoading instanceof HTMLElement) {
      btnLoading.classList.remove("hidden");
    }

    try {
      formData.set("consultationTypes", JSON.stringify(selectedTypes));

      const response = await fetch("/api/contact", {
        method: "POST",
        body: formData,
      });

      const result = await response.json();

      if (result.success) {
        setStatus("success", result.message || "感谢申请！我们将在 24 小时内与您联系，确认需求细节。");
        contactForm.reset();
        document.querySelectorAll('input[name="consultationType"]').forEach((cb) => {
          if (cb instanceof HTMLInputElement) {
            cb.checked = false;
          }
        });
        requiredFields.forEach(({ name }) => toggleFieldError(name, false));
        toggleGroupError("consultationTypes", false);
      } else {
        setStatus("error", result.error || "提交失败，请稍后重试或通过微信联系我。");
      }
    } catch (error) {
      console.error("提交错误:", error);
      setStatus("error", "网络异常，请稍后再试，或直接通过页面右侧联系方式与我联系。");
    } finally {
      if (submitBtn instanceof HTMLButtonElement) {
        submitBtn.disabled = false;
      }
      if (btnContent instanceof HTMLElement) {
        btnContent.classList.remove("hidden");
      }
      if (btnLoading instanceof HTMLElement) {
        btnLoading.classList.add("hidden");
      }
    }
  }

  if (contactForm) {
    contactForm.addEventListener("submit", handleSubmit);
  }
</script>
