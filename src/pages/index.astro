---
// src/pages/index.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { cdnUrl } from '../cdnConfig';


// 获取所有博客文章
const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 只显示最新的6篇文章
const recentPosts = posts.slice(0, 6);

// 如果没有文章，显示默认内容
const hasPosts = recentPosts.length > 0;
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- Header -->
	<div class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-200 shadow-sm">
		<Header />
	</div>
	
	<!-- Hero Section - 第一屏 -->
	<section class="hero-section min-h-screen flex items-center relative bg-gray-900 overflow-hidden">
		
		<!-- 背景装饰 -->
		<div class="absolute inset-0 overflow-hidden">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
		</div>

		<div class="relative z-30 w-full max-w-7xl mx-auto px-4 sm:px-6 pt-4 pb-4 lg:pt-8 lg:pb-16">
			<div class="grid lg:grid-cols-5 gap-6 sm:gap-8 lg:gap-12 items-start lg:items-center justify-center min-h-[calc(100vh-10rem)] lg:min-h-[calc(100vh-7rem)]">
				<!-- 左侧内容区 - 移动端全宽，PC端60% -->
				<div class="col-span-full lg:col-span-3 space-y-4 sm:space-y-6 lg:space-y-8">
					<!-- 1. 身份标签 -->
					<div class="inline-flex items-center px-3 py-1.5 sm:px-4 sm:py-2 bg-blue-600/20 border border-blue-500/30 rounded-full w-fit">
						<span class="text-blue-400 text-xs sm:text-sm font-medium">
							大湾区AI技术专家与企业培训师
						</span>
					</div>

					<!-- 2. 主标题 -->
					<h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-white leading-tight">
						用AI驱动业务增长，
						<br class="hidden sm:block" />
						<span class="text-blue-400">我为您的企业提供实战解决方案</span>
					</h1>

					<!-- 3. 副标题 -->
					<p class="text-sm sm:text-base lg:text-lg xl:text-xl text-gray-300 leading-relaxed max-w-2xl">
						我是杨东波，<span class="text-blue-400 font-semibold">广州塔哥科技有限公司创始人</span>。
						我专注于提供企业AI技术咨询、智能体（Agent）定制与Dify私有化部署服务，
						通过注重实操的内训，助您团队掌握AI提效的关键技能。
					</p>

					<!-- 4. 权威认证 - 移动端优化 -->
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-2 sm:gap-3 lg:gap-4">
						<div class="flex items-center space-x-2 sm:space-x-3 p-2 sm:p-3 bg-white/5 border border-white/10 rounded-lg">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="text-xs sm:text-sm text-gray-300 leading-tight">iTechClub华南区广州分会副秘书长</span>
						</div>
						<div class="flex items-center space-x-2 sm:space-x-3 p-2 sm:p-3 bg-white/5 border border-white/10 rounded-lg">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="text-xs sm:text-sm text-gray-300 leading-tight">广州市游戏行业协会技术与创新委员会副主任</span>
						</div>
						<div class="flex items-center space-x-2 sm:space-x-3 p-2 sm:p-3 bg-white/5 border border-white/10 rounded-lg">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="text-xs sm:text-sm text-gray-300 leading-tight">天河软件协会专家库专家</span>
						</div>
						<div class="flex items-center space-x-2 sm:space-x-3 p-2 sm:p-3 bg-white/5 border border-white/10 rounded-lg">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.40 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="text-xs sm:text-sm text-gray-300 leading-tight">广东省人工智能产业协会AI讲师库讲师</span>
						</div>
					</div>

					<!-- 5. 行动号召按钮 -->
					<div class="flex flex-col lg:flex-row gap-3 sm:gap-4 w-full lg:w-auto">
						<a href="/contact" class="inline-flex items-center justify-center px-4 sm:px-6 py-3 sm:py-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl text-center w-full lg:w-auto text-sm sm:text-base">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
							</svg>
							<span class="whitespace-nowrap">预约企业AI咨询</span>
						</a>
						<a href="https://www.xiaobot.net/p/dify?refer=29497055-5c20-4575-a26a-ff2cb81a7aa5" target="_blank" class="inline-flex items-center justify-center px-4 sm:px-6 py-3 sm:py-4 bg-yellow-500 text-gray-900 font-semibold rounded-lg hover:bg-yellow-400 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl text-center w-full lg:w-auto text-sm sm:text-base">
							<svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
							</svg>
							<span class="whitespace-nowrap">订阅Dify实战专栏</span>
						</a>
					</div>
				</div>

				<!-- 右侧视觉区 (40%) - 移动端隐藏，PC端显示 -->
				<div class="hidden lg:flex lg:col-span-2 justify-center lg:justify-end">
					<div class="relative w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl flex items-center justify-center lg:justify-end">
						<!-- 个人形象照 -->
						<OptimizedImage 
							src={cdnUrl("/images/hero1.png")}
							alt="杨东波 - AI技术专家" 
							class="w-full h-auto object-contain max-h-64 sm:max-h-80 md:max-h-96 lg:max-h-full"
						/>
					</div>
				</div>
			</div>
		</div>
		
		<!-- 向下箭头按钮 -->
		<div class="absolute bottom-4 sm:bottom-6 lg:bottom-8 left-1/2 transform -translate-x-1/2 z-50">
			<button 
				id="scrollDownBtn"
				class="animate-bounce p-3 sm:p-4 bg-white/10 hover:bg-white/20 border border-white/20 rounded-full transition-all duration-300 cursor-pointer group shadow-lg"
			>
				<svg class="w-5 h-5 sm:w-6 sm:h-6 text-white group-hover:text-blue-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
				</svg>
			</button>
		</div>
	</section>

	<!-- Blog Section - 第二屏开始 -->
	<section id="blog-section" class="py-20 bg-gray-50">
		<div class="max-w-7xl mx-auto px-6">
			<!-- 章节标题 -->
			<div class="text-center mb-16">
				<h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
					最新文章
				</h2>
				<p class="text-xl text-gray-600">
					分享AI技术洞察，助力企业数字化转型
				</p>
			</div>

			<!-- 博客文章列表 -->
			{hasPosts ? (
				<div class="space-y-8">
					{recentPosts.map((blogPost) => (
						<article class="blog-article bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-300 overflow-hidden group">
							<div class="flex flex-col lg:flex-row">
								<!-- 文章图片 -->
								<div class="relative overflow-hidden lg:w-1/3">
									<OptimizedImage 
										src={blogPost.data.heroImage || cdnUrl('/blog-placeholder-1.svg')} 
										alt={blogPost.data.title}
										class="w-full h-48 lg:h-full object-cover group-hover:scale-110 transition-transform duration-300"
									/>
									<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
								</div>

								<!-- 文章内容 -->
								<div class="flex-1 p-6 lg:p-8">
									<!-- 标签 -->
									{blogPost.data.tags && (
										<div class="flex flex-wrap gap-2 mb-4">
											{blogPost.data.tags.map((tag: string) => (
												<span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors duration-200">
													<svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
													</svg>
													{tag}
												</span>
											))}
										</div>
									)}

									<!-- 文章标题 -->
									<h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors duration-200">
										{blogPost.data.title}
									</h3>

									<!-- 文章描述 -->
									<p class="text-lg text-gray-600 mb-4 leading-relaxed">
										{blogPost.data.description}
									</p>

									<!-- 文章预览内容 -->
									<div class="text-gray-700 mb-6 leading-relaxed line-clamp-4">
										{blogPost.data.description.length > 300 ? blogPost.data.description.slice(0, 300) + '...' : blogPost.data.description}
									</div>

									<!-- 底部信息 -->
									<div class="flex items-center justify-between">
										<!-- 元信息 -->
										<div class="flex items-center space-x-4 text-sm text-gray-500">
											<span class="flex items-center">
												<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
												</svg>
												{blogPost.data.pubDate.toLocaleDateString('zh-CN')}
											</span>
											<span class="flex items-center">
												<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
													<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
												</svg>
												阅读全文
											</span>
										</div>
										
										<!-- 阅读更多按钮 -->
										<a href={`/blog/${blogPost.id}/`} class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105 group-hover:translate-x-1">
											阅读全文
											<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
											</svg>
										</a>
									</div>
								</div>
							</div>
						</article>
					))}
				</div>
			) : (
				<!-- 没有文章时的占位内容 -->
				<div class="text-center py-16">
					<div class="max-w-md mx-auto">
						<svg class="w-24 h-24 mx-auto text-gray-300 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
						</svg>
						<h3 class="text-xl font-semibold text-gray-900 mb-2">暂无文章</h3>
						<p class="text-gray-600">正在准备精彩内容，敬请期待...</p>
					</div>
				</div>
			)}

			<!-- 查看更多按钮 -->
			<div class="text-center mt-16">
				<a href="/blog" class="inline-flex items-center px-8 py-4 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all duration-200 shadow-lg hover:shadow-xl hover:scale-105">
					查看所有文章
					<svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</a>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="bg-gray-900 text-white py-12">
		<div class="max-w-7xl mx-auto px-6 text-center">
			<p class="text-gray-400 mb-4">
				© 2025 东波哥. 用心记录，用技术创造价值.
			</p>
			<div class="flex justify-center space-x-6 mb-4">
				<a href="/about" class="text-gray-400 hover:text-white transition-colors duration-200">关于</a>
				<a href="/contact" class="text-gray-400 hover:text-white transition-colors duration-200">联系</a>
				<a href="/rss.xml" class="text-gray-400 hover:text-white transition-colors duration-200">RSS</a>
			</div>
			<div class="border-t border-gray-800 pt-4">
				<p class="text-gray-500 text-sm">
					<a href="https://beian.miit.gov.cn/" target="_blank" class="hover:text-gray-400 transition-colors duration-200">
						粤ICP备2021046742号-1
					</a>
				</p>
			</div>
		</div>
	</footer>
</Layout>

<style>
	.hero-section {
		min-height: 100vh;
		min-height: 100dvh; /* 动态视口高度，更适合移动端 */
	}
	
	/* 移动端优化 - 减少上下留白 */
	@media (max-height: 700px) {
		.hero-section {
			min-height: 100vh;
		}
		
		.hero-section .space-y-4 > * + * {
			margin-top: 0.75rem;
		}
		
		.hero-section .space-y-6 > * + * {
			margin-top: 1rem;
		}
	}
	
	/* 超小屏幕适配 */
	@media (max-height: 600px) {
		.hero-section {
			min-height: auto;
		}
		
		.hero-section h1 {
			font-size: 1.5rem;
			line-height: 1.3;
		}
		
		.hero-section p {
			font-size: 0.875rem;
		}
	}
	
	/* 横屏手机适配 */
	@media (max-height: 500px) and (orientation: landscape) {
		.hero-section {
			min-height: auto;
		}
		
		.hero-section .grid {
			gap: 1rem;
		}
		
		.hero-section .space-y-4 > * + * {
			margin-top: 0.5rem;
		}
	}
	
	.line-clamp-2 {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.line-clamp-3 {
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}
	
	.line-clamp-4 {
		display: -webkit-box;
		-webkit-line-clamp: 4;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: .5;
		}
	}
	
	.animate-pulse {
		animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}

	.animate-bounce {
		animation: bounce 1s infinite;
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateY(-25%);
			animation-timing-function: cubic-bezier(0.8,0,1,1);
