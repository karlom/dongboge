---
export const prerender = true;

// src/pages/index.astro
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import SideNavigation from '../components/SideNavigation.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { cdnUrl } from '../cdnConfig';


// 获取所有博客文章
const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 只显示最新的6篇文章
const recentPosts = posts.slice(0, 6);

// 如果没有文章，显示默认内容
const hasPosts = recentPosts.length > 0;

// 导航sections配置
const navigationSections = [
  { id: 'intro', name: '概览' },
  { id: 'value-promise', name: '价值' },
  { id: 'case-highlights', name: '案例' },
  { id: 'blog-section', name: '文章' },
  { id: 'stay-connected', name: '联系' }
];
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- 右侧导航 -->
	<SideNavigation sections={navigationSections} />
	<!-- Header - 亮区背景 -->
	<div class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-sm">
		<Header />
	</div>

		
	<!-- SEO优化隐藏内容 -->
	<div class="sr-only" itemScope itemType="https://schema.org/Person">
		<h1 itemProp="name">东波哥（杨东波）- 广州企业AI培训专家</h1>
		<p itemProp="description">专业提供企业AI培训、广州AI培训、AI创业指导服务。iTechClub华南区副秘书长，专注AI技术咨询与智能体定制开发。</p>
		<span itemProp="jobTitle">企业AI培训师</span>
		<span itemProp="knowsAbout">企业培训</span>
		<span itemProp="knowsAbout">AI培训</span>
		<span itemProp="knowsAbout">企业AI培训</span>
		<span itemProp="knowsAbout">广州AI培训</span>
		<span itemProp="knowsAbout">AI创业</span>
