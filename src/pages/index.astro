<script>
	// 页面滚动功能
	function scrollToSection() {
		const blogSection = document.getElementById('blog-section');
		if (blogSection) {
			blogSection.scrollIntoView({ 
				behavior: 'smooth',
				block: 'start'
			});
		}
	}

	// 页面加载完成后绑定事件
	document.addEventListener('DOMContentLoaded', function() {
