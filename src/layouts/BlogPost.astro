---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import BlogNavigation from "../components/BlogNavigation.astro";
import OptimizedImage from "../components/OptimizedImage.astro";

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: any;
	prevPost?: CollectionEntry<"blog">;
	nextPost?: CollectionEntry<"blog">;
}

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	prevPost,
	nextPost,
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 2rem; /* 增加图片底部间距 */
				padding: 1rem;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				max-height: 70vh; /* 限制图片最大高度 */
				object-fit: contain;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1.5em; /* 增加内边距 */
				color: rgb(var(--gray-dark));
				background-color: white;
				border-radius: 1rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
			}
			.title {
				margin-bottom: 1.5em; /* 增加底部间距 */
				padding: 1.5em 0; /* 增加上下内边距 */
				text-align: center;
				line-height: 1.2; /* 增加行高 */
			}
			.title h1 {
				margin: 0.5em 0 0.8em 0; /* 调整标题上下间距 */
				font-size: 2.5rem; /* 增大标题字体 */
				line-height: 1.2;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image mb-12">
					{
						heroImage && (
							<OptimizedImage
								width={1020}
								height={510}
								src={heroImage}
								alt={title}
								class="rounded-lg shadow-md"
							/>
						)
					}
				</div>
				<div class="prose mt-8">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on{" "}
										<FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
					<BlogNavigation prevPost={prevPost} nextPost={nextPost} />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
